<h1>Listing computers</h1>

<%= form_for(@computer) do |f| %>
  <% if @computer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@computer.errors.count, "error") %> prohibited this computer from being saved:</h2>

      <ul>
      <% @computer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :serial_no %><br />
    <%= f.text_field :serial_no %>
  </div>
  <div class="field">
    <%= f.label :asset_tag %><br />
    <%= f.number_field :asset_tag %>
  </div>
  <div class="field">
    <%= f.label :computer_name %><br />
    <%= f.text_field :computer_name %>
  </div>
  <div class="field">
    <%= f.label :make %><br />
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<table>
  <tr>
    <th>Serial no</th>
    <th>Asset tag</th>
    <th>Computer name</th>
    <th>Make</th>
    <th>Model</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @computers.each do |computer| %>
    <tr class="<%= cycle('list-line-odd', 'list-line-even')  %>">
    <td><%= computer.serial_no %></td>
    <td><%= computer.asset_tag %></td>
    <td><%= computer.computer_name %></td>
    <td><%= computer.make %></td>
    <td><%= computer.model %></td>
    <td><%= link_to 'Show', computer %></td>
    <td><%= link_to 'Edit', edit_computer_path(computer) %></td>
    <td><%= link_to 'Destroy', computer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Computer', new_computer_path %>
