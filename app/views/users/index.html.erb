<h1>Listing users</h1>

Total Users: <%= @users.count %>
<table>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Uname</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td><%= user.fname %></td>
    <td><%= user.lname %></td>
    <td><%= user.uname %></td>
    <td><%= user.position %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Attach', { :action => 'attach', :id => user.id } %></td>

  </tr>
<% end %>
</table>

