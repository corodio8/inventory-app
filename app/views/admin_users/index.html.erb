<h1>Listing Administrative users</h1>

Total Administrative Users: <%= @admin_users.count %>
<table>
  <tr>
    <th>Email</th>
  </tr>

<% @admin_users.each do |admin_user| %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td><%= admin_user.email %></td>
    <td><%= link_to 'Change_Password', edit_admin_user_path(admin_user) %></td>
    <td><%= link_to 'Destroy', admin_user, confirm: 'Are you sure?', method: :delete %></td>

  </tr>
<% end %>
</table>

<br />

