<h1>Asset Objects</h1>



<table>
  <tr>
    <th>Serial no</th>
    <th>Asset tag</th>
    <th>Computer name</th>
    <th>Make</th>
    <th>Model</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @computers.each do |computer| %>
    <tr class="<%= cycle('list-line-odd', 'list-line-even')  %>">
    <td><%= computer.serial_no %></td>
    <td><%= computer.asset_tag %></td>
    <td><%= computer.computer_name %></td>
    <td><%= computer.make %></td>
    <td><%= computer.model %></td>
    <td class='link'><%= link_to 'Show', computer %></td>
    <td class='link'><%= link_to 'Edit', edit_computer_path(computer) %></td>
    <td class='link'><%= link_to 'Destroy', computer, confirm: 'WARNING: This will destroy all assignments associated with this asset, only use this if it was a test or erroneously created object, the asset being retired, then use the RETIRE function instead.', method: :delete %></td>
  </tr>
<% end %>
</table>

